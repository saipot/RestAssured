pipeline {
    agent any
	 
    tools {  
     maven 'maven_3.6.2'  
    } 
    stages {
        stage('Checkout') {
            steps {
                echo 'Checkout'
            }
        }
        stage('Build') {
            steps {
                echo 'Clean Build'
                bat 'mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
                bat 'mvn test'
            }
        }
       
        stage('Package') {
            steps {
                echo 'Packaging'
                bat 'mvn package -DskipTests'
            }
        }
        stage('Deploy') {
            steps {
                echo '## TODO DEPLOYMENT ##'
            }
	    }
	   	
    
	

  
        stage('reports') {
           steps {
            step([$class: 'Publisher', reportFilenamePattern: '**/testng-results.xml'])
			archiveArtifacts artifacts: 'target/com.test.restassured-0.0.1-SNAPSHOT.jar', allowEmptyArchive: true
        }
	}
	 stage('Email notification') {
	    steps {
	    mail bcc: '', body: 'Test job from jenkins', cc: '', from: '', replyTo: '', subject: 'jenkins job', to: 'sailu.kaushik@gmail.com'
	     }
	
       }
}
     

 }
