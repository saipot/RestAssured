pipeline {
    agent any
    parameters {
        choice(
            choices: ['BUILD SUCCESS' , 'BUILD FAILURE'],
            description: '',
            name: 'RestAssured')
    }

    stages {
        stage ('Build') {
	steps {
	bat 'mvn clean compile test'
            when {
                
                expression { params.RestAssured == 'BUILD FAILURE' }
            }
	    }
	    }
		}
            post {
        always {
            echo "Pipeline result: ${currentBuild.result}"
            echo "Pipeline currentResult: ${currentBuild.currentResult}"
        }
    }
     
    
    
}
